{
  "version": 3,
  "cmakeMinimumRequired": {
    "major": 3,
    "minor": 20,
    "patch": 4
  },
  "configurePresets": [
    {
      "name": "base",
      "binaryDir": "${sourceDir}/build/${presetName}"
    },
    {
      "inherits": "base",
      "name": "default",
      "displayName": "Default Config",
      "description": "Default build using Ninja Multi generator",
      "generator": "Ninja Multi-Config"
    },
    {
      "name": "xcode",
      "displayName": "XCode Config",
      "description": "Build config with the Xcode generator",
      "generator": "Xcode",
      "binaryDir": "${sourceDir}/xcode"
    },
    {
      "name": "msvc",
      "displayName": "Visual Studio 17",
      "description": "Build config with the Visual Studio 17 generator",
      "generator": "Visual Studio 17 2022",
      "binaryDir": "${sourceDir}/vs"
    },
    {
      "inherits": "base",
      "name": "brew-gcc",
      "displayName": "brew gcc",
      "description": "Build config with gcc on MacOS",
      "generator": "Ninja Multi-Config",
      "toolchainFile": "${sourceDir}/CMake/brew-gcc-toolchain.cmake"
    }
  ],
  "buildPresets": [
    {
      "name": "default",
      "configurePreset": "default",
      "configuration": "Debug"
    },
    {
      "name": "default-release",
      "inherits": "default",
      "configuration": "Release"
    },
    {
      "name": "xcode",
      "configurePreset": "xcode",
      "configuration": "Debug"
    },
    {
      "name": "xcode-release",
      "inherits": "xcode",
      "configuration": "Release"
    },
    {
      "name": "msvc",
      "configurePreset": "msvc",
      "configuration": "Debug"
    },
    {
      "name": "msvc-release",
      "inherits": "msvc",
      "configuration": "Release"
    },
    {
      "name": "brew-gcc",
      "configurePreset": "brew-gcc",
      "configuration": "Debug"
    }
  ],
  "testPresets": [
    {
      "name": "default",
      "configurePreset": "default",
      "configuration": "Debug",
      "output": {
        "outputOnFailure": true
      },
      "execution": {
        "noTestsAction": "error",
        "stopOnFailure": true
      }
    },
    {
      "name": "default-release",
      "inherits": "default",
      "configuration": "Release"
    },
    {
      "name": "xcode",
      "inherits": "default",
      "configurePreset": "xcode"
    },
    {
      "name": "xcode-release",
      "inherits": "xcode",
      "configuration": "Release"
    },
    {
      "name": "msvc",
      "inherits": "default",
      "configurePreset": "msvc"
    },
    {
      "name": "msvc-release`",
      "inherits": "msvc",
      "configuration": "Release"
    },
    {
      "name": "brew-gcc",
      "configurePreset": "brew-gcc",
      "configuration": "Debug",
      "output": {
        "outputOnFailure": true
      },
      "execution": {
        "noTestsAction": "error",
        "stopOnFailure": true
      }
    }
  ]
}
