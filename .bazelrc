
# GCC/Clang warnings
build:unix --copt=-Wall --copt=-Wextra --copt=-Wpedantic
build:unix --cxxopt=-Wall --cxxopt=-Wextra --cxxopt=-Wpedantic

# MSVC warnings
build:msvc --copt=/W4 --cxxopt=/W4

# Map configs to platforms/toolchains
build:macos --config=unix
build:linux --config=unix
build:windows --config=msvc
